# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database (do NOT store raw passwords in repo)
MONGODB_URI=mongodb+srv://appUser:<APP_DB_PASSWORD>@cluster0.mongodb.net/agriconnect_prod?retryWrites=true&w=majority
MONGODB_TEST_URI=mongodb://localhost:27017/agriconnect_test

# Redis (prefer TLS)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Redis URL (optional, prefer one format)
REDIS_URL=rediss://:<REDIS_PASSWORD>@redis-host:6379/0

# JWT
JWT_SECRET=<BASE64_OR_HEX_SECRET>
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# M-Pesa Daraja API
MPESA_CONSUMER_KEY=<MPESA_CONSUMER_KEY>
MPESA_CONSUMER_SECRET=<MPESA_CONSUMER_SECRET>
MPESA_SHORTCODE=174379
MPESA_PASSKEY=<MPESA_PASSKEY>
MPESA_CALLBACK_URL=https://yourdomain.com/api/v1/payments/callback
MPESA_ENVIRONMENT=sandbox

# Africa's Talking
AFRICAS_TALKING_API_KEY=<AFRICAS_TALKING_API_KEY>
AFRICAS_TALKING_USERNAME=sandbox

# AWS (prefer IAM role instead of env keys)
S3_BUCKET_NAME=agriconnect-storage
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=<S3_ACCESS_KEY_ID>
S3_SECRET_ACCESS_KEY=<S3_SECRET_ACCESS_KEY>

# Google Maps
GOOGLE_MAPS_API_KEY=<RESTRICTED_GOOGLE_MAPS_KEY>

# Email (Optional - use app-specific passwords)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=service@example.com
SMTP_PASSWORD=<APP_SPECIFIC_PASSWORD>

# Frontend URL (for CORS)
FRONTEND_URL=https://app.example.com

# Logging
LOG_LEVEL=info